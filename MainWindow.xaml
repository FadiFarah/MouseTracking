<Window x:Class="MouseTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sticky Circle App" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" Topmost="True" ShowInTaskbar="False" SizeToContent="WidthAndHeight" WindowState="Maximized">
    <Grid>
        <!-- Circle representing the application -->
        <Ellipse x:Name="appCircle" Width="20" Height="20" Fill="Red" Stroke="Black" StrokeThickness="1" Canvas.ZIndex="1000"/>
    </Grid>
</Window>
